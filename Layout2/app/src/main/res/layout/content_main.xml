<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sora.layout2.MainActivity"
    tools:showIn="@layout/activity_main">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No.1"
        android:id="@+id/bt1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No.2"
        android:id="@+id/bt2"
        android:layout_alignBottom="@+id/bt1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="36dp"
        android:layout_marginEnd="36dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No.3"
        android:id="@+id/bt3"
        android:layout_below="@+id/bt1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No.4"
        android:id="@+id/bt4"
        android:layout_alignBottom="@+id/bt3"
        android:layout_alignLeft="@+id/bt2"
        android:layout_alignStart="@+id/bt2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No.5"
        android:id="@+id/bt5"
        android:layout_below="@+id/bt3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No.6"
        android:id="@+id/bt6"
        android:layout_alignTop="@+id/bt5"
        android:layout_alignLeft="@+id/bt4"
        android:layout_alignStart="@+id/bt4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No.7"
        android:id="@+id/bt7"
        android:layout_below="@+id/bt5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No.8"
        android:id="@+id/bt8"
        android:layout_alignTop="@+id/bt7"
        android:layout_alignRight="@+id/bt6"
        android:layout_alignEnd="@+id/bt6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No.9"
        android:id="@+id/bt9"
        android:layout_below="@+id/bt7"
        android:layout_marginTop="36dp"
        android:layout_alignRight="@+id/bt8"
        android:layout_alignEnd="@+id/bt8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
